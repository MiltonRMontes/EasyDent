@model prjEasyDent.Model.tblAntecedente
@{
    ViewBag.Title = "Crear Antecedentes";
}
@if (Session["LogedUserFullname"] != null)
{
<!-- Start content -->
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><h3 class="panel-title">Crear Antecedentes</h3></div>
                        <div class="panel-body">
                            <form class="form-horizontal" method="post" action=@Url.Action("GuardarAntecedente", "Home")>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Patología</label>
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.fk_patologia, new SelectList(ViewBag.Patologias, "id_patologia", "descripcion"), htmlAttributes: new { @class = "form-control input-lg", @type = "text" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Observación</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.observacion, new { htmlAttributes = new { @class = "form-control input-lg", @type = "text" } })
                                    </div>
                                </div>
                                <div class="form-group text-center m-t-40">
                                    <div class="col-xs-12">
                                        <button class="btn btn-primary waves-effect waves-light btn-lg w-lg" type="submit">Siguiente</button>
                                    </div>
                                </div>
                            </form>
                        </div> <!-- panel-body -->
                    </div> <!-- panel -->
                </div> <!-- col -->
            </div><!-- Row -->
        </div> <!-- content -->
    </div>
}