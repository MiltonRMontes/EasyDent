@model prjEasyDent.Model.tblUsuario

@{
    ViewBag.Title = "Modificar Usuario";
}

@if (Session["LogedUserFullname"] != null)
{
 <!-- Start content -->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><h3 class="panel-title">Modificar Usuario</h3></div>
                        <div class="panel-body">
                            <form class="form-horizontal" method="post" action=@Url.Action("Usuario_Modificado", "Home")>
                                
                                @Html.HiddenFor(model => model.id_usuario)

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Número de Documento de Identidad</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.numero_documento, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Nombres</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.nombres, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Apellidos</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.apellidos, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Títulos Universitarios</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.titulos, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Dirección del Consultorio</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.direccion_consultorio, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Dirección de Residencia</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.direccion_hogar, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Teléfono de Consultorio</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.telefono_consultorio, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Teléfono Personal</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.telefono_personal ,new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Email</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Nueva Contraseña</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group text-center m-t-40">
                                    <div class="col-xs-12">
                                        <button class="btn btn-primary waves-effect waves-light btn-lg w-lg" type="submit">Guardar</button>
                                    </div>
                                </div>
                            </form>
                        </div> <!-- panel-body -->
                    </div> <!-- panel -->
                </div> <!-- col -->
            </div><!-- Row -->

        </div> <!-- content -->
    </div>
}           