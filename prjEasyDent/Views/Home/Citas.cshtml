@model IEnumerable<prjEasyDent.Model.tblCita>

@{
    
}


@if (Session["LogedUserFullname"] != null)
{
    <!-- Start content -->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><h3 class="panel-title">Modificar Pacientes</h3></div>
                        <div class="panel-body">
                            <form class="form-horizontal" method="post" action=@Url.Action("Modificar_Paciente", "Home")>

                                <table class="table">
                                    <tr>
                                        <th>
                                            Fecha
                                        </th>
                                        <th>
                                            Descripción
                                        </th>
                                        <th>
                                            Nombres
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fecha_cita)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fk_paciente)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Modificar", "Modificar_Cita", new { id = item.id_cita })
                                            </td>
                                        </tr>
                                    }
                                </table>
                                
                            </form>
                        </div> <!-- panel-body -->
                    </div> <!-- panel -->
                </div> <!-- col -->
            </div><!-- Row -->

        </div> <!-- content -->
    </div>
}